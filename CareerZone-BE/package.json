{
  "name": "careerconnect-be-expressjs",
  "version": "1.0.0",
  "description": "A comprehensive job portal platform built with Express.js, connecting job seekers (Candidates) and employers (Recruiters)",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "nodemon src/server.js",
    "dev": "nodemon --trace-warnings src/server.js",
    "prod": "node src/server.js",
    "lht": "dotenv -e .env.lht nodemon  --trace-warnings src/server.js",
    "worker:notification": "nodemon workers/notification.worker.js",
    "worker:matching": "nodemon workers/matching.worker.js",
    "worker:embedding": "node workers/embedding.worker.js",
    "backfill": "node scripts/update-job-embeddings.js",
    "start:all": "npm-run-all --parallel dev worker:notification worker:matching worker:embedding",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --detectOpenHandles --forceExit --no-cache",
    "normalize:locations": "node scripts/chuan-hoa-location-data.js",
    "normalize:keywords": "node scripts/normalize-keywords.js",
    "rebuild:redis": "node scripts/rebuild-redis-subscriptions.js",
    "rebuild:redis:all": "node scripts/rebuild-redis-all.js",
    "rebuild:redis:dryrun": "node scripts/rebuild-redis-all.js --dry-run --verbose",
    "test:changestream": "node scripts/test-change-stream.js",
    "check:integrity": "node scripts/check-data-integrity.js",
    "cleanup:orphaned": "node scripts/cleanup-orphaned-data.js",
    "backfillembeding": "node scripts/backfill-embeddings.js",
    "reminders:schedule": "node scripts/schedule-interview-reminders.js"
  },
  "keywords": [
    "job",
    "portal",
    "career",
    "recruitment",
    "express",
    "nodejs"
  ],
  "author": "Le Dinh Tri",
  "license": "MIT",
  "dependencies": {
    "amqplib": "^0.10.8",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.4.1",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "^10.1.0",
    "helmet": "^7.1.0",
    "html-to-text": "^9.0.5",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "moment": "^2.30.1",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "ngeohash": "^0.6.3",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.394",
    "probe-image-size": "^7.2.3",
    "pug": "^3.0.3",
    "puppeteer": "^24.19.0",
    "redis": "^4.6.11",
    "socket.io": "^4.7.4",
    "string-similarity": "^4.0.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^30.0.5",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.0.5",
    "mongodb-memory-server": "^10.1.4",
    "mongoose-erd-generator": "^0.0.5",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
